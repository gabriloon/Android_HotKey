<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background3"
    >

    <TextView
        android:id="@+id/textM"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="SUB 10 KEYBOARD"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textColor="#ffff"
        />

    <LinearLayout
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/Linear1"
        >
        <Button
            android:id="@+id/delete"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text="Delete"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/end"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text="End"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/home"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text="Home"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/back"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text="Back"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/Linear1"
        >
        <Button
            android:id="@+id/insert"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text="Insert"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/cut"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text="/"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/star"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text="*"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/minus"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text="-"
            android:textSize="30dp"
            />

    </LinearLayout>


    <TableLayout
        android:id="@+id/Talbe1"
        android:orientation="horizontal"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Linear2"
        android:layout_alignLeft="@id/Linear2"
        >

        <TableRow
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/seven"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:textSize="35dp"

                />

            <Button
                android:id="@+id/eight"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:textSize="35dp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:textSize="35dp" />

        </TableRow>


        <TableRow   android:layout_width="320dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/four"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textSize="35dp"

                />

            <Button
                android:id="@+id/five"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textSize="35dp" />

            <Button
                android:id="@+id/six"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:textSize="35dp"
                />

        </TableRow>


        <TableRow   android:layout_width="320dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/one"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="35dp"

                />

            <Button
                android:id="@+id/two"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textSize="35dp" />

            <Button
                android:id="@+id/three"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="35dp"
                />

        </TableRow>


        <TableRow   android:layout_width="320dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/zero"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="35dp"

                />

            <Button

                android:id="@+id/doublezero"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00"
                android:textSize="35dp" />

            <Button
                android:id="@+id/zum"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="."
                android:textSize="35dp"
                />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/Linear3"
        android:layout_toRightOf="@id/Talbe1"
        android:layout_below="@id/Linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:text="+"
            android:textSize="35dp" />

        <Button
            android:id="@+id/enter"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:text="Enter"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>
